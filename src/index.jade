doctype html
html(lang="ja")
  head
    meta(charset='UTF-8')
    title unsplash-gallery
    meta(content='IE=edge', http-equiv='X-UA-Compatible')
    meta(content='author', name='author')
    meta(content='description', name='description')
    meta(content='keywords', name='keywords')
    meta(content='width=device-width, initial-scale=1' name='viewport')
    meta(content='telephone=no', name='format-detection')
    link(href='https://fonts.googleapis.com/css?family=Crimson+Text' rel='stylesheet' type='text/css')
    // build:css styles/vendor.css
    // bower:css
    // endbower
    // endbuild
    link(rel='stylesheet', href='styles/style.css', media='all')
  body
    .l-container
      ul.gallery#gallery

    script(type="text/tempalte" id="gallery-template")
      li.gallery__item
        a.gallery__img(href!="<%= postUrl %>" target="_blank")
          img(src!="https://unsplash.it/300?image=<%= id %>" alt="")
        .gallery__data
          a.gallery__author(href!="<%= authorUrl %>" target="_blank") <%= author %>

    // build:js scripts/vendor.js
    // bower:js
    script(src='../bower_components/jquery/dist/jquery.js')
    script(src='../bower_components/underscore/underscore.js')
    script(src='../bower_components/async/lib/async.js')
    // endbower
    // endbuild

    // build:js scripts/main.js
    script(src='scripts/script.js')
    // endbuild
